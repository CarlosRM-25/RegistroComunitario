@model IEnumerable<RegistroComunitario.Models.Vecino>
@{
    ViewData["Title"] = "Lista de Vecinos";
}

<h1>Lista de Vecinos</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<p><a class="btn btn-primary" href="/Vecinos/Create">Registrar Nuevo</a></p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Identificación</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Género</th>
            <th>Edad</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="8" class="text-center">No hay registros.</td></tr>
        }
        else
        {
            foreach (var v in Model)
            {
                <tr>
                    <td>@v.Id</td>
                    <td>@v.Identificacion</td>
                    <td>@v.Nombre</td>
                    <td>@v.Apellidos</td>
                    <td>@v.Telefono</td>
                    <td>@v.Correo</td>
                    <td>@v.Genero</td>
                    <td>@v.Edad</td>
                </tr>
            }
        }
    </tbody>
</table>
